{
  "vcs": { "clientKind": "git", "enabled": true, "useIgnoreFile": true },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "includes": ["**", "!**/sst-env.d.ts"],
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 130
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "includes": ["**", "!**/sst-env.d.ts"],
    "domains": {
      "test": "recommended",
      "project": "recommended"
    },
    "rules": {
      "style": {
        "noNamespace": "error",
        "useForOf": "error",
        "noParameterProperties": "error",
        "useBlockStatements": "error",
        "useShorthandAssign": "error",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "shorthand"
          }
        }
      },
      "suspicious": {
        "useAwait": "error",
        "noEvolvingTypes": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "nursery": {
        "noMisusedPromises": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "overrides": [
    {
      "includes": ["**/*.spec.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
