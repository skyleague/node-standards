{
  "name": "@skyleague/node-standards",
  "version": "1.0.0",
  "description": "Build tools for SkyLeague packages.",
  "license": "MIT",
  "author": "SkyLeague Technologies B.V. <technologies@skyleague.io> (https://skyleague.io)",
  "main": ".main.js",
  "types": "index.d.ts",
  "bin": {
    "node-standards": "bin/run"
  },
  "engines": {
    "node": ">=16"
  },
  "node-standards": {
    "type": "yargs-cli",
    "template": {
      "exclude": [
        ".eslintrc.js",
        "babel.config.js",
        "commitlint.config.js",
        "esbuild.config.ts",
        "lint-staged.config.js",
        "prettier.config.js",
        "release.config.js",
        "tsconfig.dist.json",
        "tsconfig.json",
        "typedoc.js",
        ".github/workflows/package.yml"
      ],
      "lint": {
        "files": false
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skyleague/node-standards.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    ".eslintrc.base.js",
    ".main.js.map",
    ".main.js",
    "babel.config.js",
    "bin",
    "commitlint.config.js",
    "esbuild.plugins.js",
    "index.d.ts",
    "jest.config.js",
    "lint-staged.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "src/**/*.d.ts",
    "templates",
    "tsconfig.base.json",
    "typedoc.js"
  ],
  "scripts": {
    "build": "npx ts-node esbuild.config.ts",
    "build:clean": "npx tsc --build --clean && rm .main.js && rm .main.js.map",
    "build:docs": "npx typedoc",
    "check:cost": "npx cost-of-modules --no-install --include-dev",
    "check:coverage": "npx jest --collectCoverage=true",
    "check:full": "npm run lint && npm run check:types && npm run check:coverage && npm run build && npm run check:project",
    "check:project": "npx node-standards lint",
    "check:types": "npx tsc -p tsconfig.json",
    "fix": "npm run lint -- --fix",
    "format": "npx prettier \"**/*.{ts,js,json,yml,yaml}\" --ignore-path .gitignore --write",
    "lint": "npx eslint \"{src,test,typing}/**/*.ts\" --no-eslintrc --cache -c .eslintrc.js --ignore-path .gitignore",
    "lint:full": "bash -c \"FULL_LINT=true npm run lint\"",
    "package": "rm -rf .dist && npm run build",
    "postyalcpublish": "cd examples/library && npx yalc add @skyleague/node-standards && cd ../yargs-cli && npx yalc add @skyleague/node-standards",
    "prepare": "npx husky install || true",
    "preyalcpublish": "npm run build",
    "test": "npx jest"
  },
  "dependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "adm-zip": "^0.5.9",
    "conventional-changelog": "^3.1.25",
    "esbuild": "^0.15.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint": "^8.23.0",
    "find-root": "^1.1.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^29.0.1",
    "line-diff": "^2.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "tslib": "^2.4.0",
    "variable-diff": "^2.0.2",
    "source-map-support": "^0.5.21",
    "yargs": "^17.5.1"
  },
  "peerDependencies": {
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/concurrently": "^7.0.0",
    "@types/find-root": "^1.1.2",
    "@types/is-ci": "^3.0.0",
    "@types/source-map-support": "^0.5.6",
    "@types/yargs": "^17.0.12",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}
