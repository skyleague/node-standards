{
  "name": "@skyleague/node-standards",
  "version": "8.2.2",
  "description": "Build tools for SkyLeague packages.",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyleague/node-standards.git"
  },
  "license": "MIT",
  "author": "SkyLeague Technologies B.V. <technologies@skyleague.io> (https://skyleague.io)",
  "type": "module",
  "exports": {
    ".": "./.dist/index.js",
    "./biome": "./biome.json",
    "./package.json": "./package.json",
    "./*.cjs": "./*.cjs",
    "./.*.cjs": "./.*.cjs",
    "./tsconfig.base.json": "./tsconfig.base.json",
    "./*.js": "./.dist/*.js"
  },
  "types": "./.dist/index.d.ts",
  "bin": {
    "node-standards": "./bin/run.js"
  },
  "files": [
    "bin",
    ".dist",
    "biome.json",
    "esbuild.plugins.cjs",
    "package.json",
    "release.config.cjs",
    "templates",
    "examples",
    "tsconfig.base.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.dist.json",
    "build:docs": "npx typedoc",
    "check:coverage": "vitest run --coverage=true",
    "check:project": "node-standards lint",
    "check:types": "tsc -p tsconfig.json",
    "lint": "biome check",
    "lint:fix": "npm run lint -- --write --unsafe",
    "package": "rm -rf .dist && npm run build",
    "prepare": "husky || true",
    "test": "vitest run"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@types/node": "^20.16.1",
    "@vitest/coverage-v8": "^2.0.5",
    "conventional-changelog": "^6.0.0",
    "enquirer": "^2.4.1",
    "esbuild": "^0.23.1",
    "fast-glob": "^3.3.2",
    "find-root": "^1.1.0",
    "husky": "^9.1.5",
    "is-ci": "^3.0.1",
    "line-diff": "^2.1.1",
    "lint-staged": "^15.2.9",
    "semantic-release": "^24.1.0",
    "semver": "^7.6.3",
    "tsx": "^4.17.0",
    "variable-diff": "^2.0.2",
    "vitest": "^2.0.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@skyleague/therefore": "^5.10.2",
    "@types/find-root": "^1.1.4",
    "@types/is-ci": "^3.0.4",
    "@types/semver": "^7.5.8",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org"
  },
  "workspaces": ["./", "examples/*"],
  "node-standards": {
    "extends": "yargs-cli",
    "ignorePatterns": ["biome.json", "release.config.cjs", "tsconfig.json"],
    "rules": {
      "files": false
    }
  }
}
