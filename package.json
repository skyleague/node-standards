{
  "name": "@skyleague/node-standards",
  "version": "1.0.0",
  "description": "Build tools for SkyLeague packages.",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyleague/node-standards.git"
  },
  "license": "MIT",
  "author": "SkyLeague Technologies B.V. <technologies@skyleague.io> (https://skyleague.io)",
  "type": "module",
  "exports": {
    ".": "./.dist/index.js",
    "./package.json": "./package.json",
    "./*.cjs": "./*.cjs",
    "./.*.cjs": "./.*.cjs",
    "./tsconfig.base.json": "./tsconfig.base.json"
  },
  "types": "./.dist/index.d.ts",
  "bin": {
    "node-standards": "./bin/run.js"
  },
  "files": [
    ".eslintrc.base.cjs",
    "babel.config.cjs",
    "bin",
    ".dist",
    "commitlint.config.cjs",
    "esbuild.plugins.cjs",
    "lint-staged.config.cjs",
    "package.json",
    "prettier.config.cjs",
    "release.config.cjs",
    "templates",
    "examples",
    "tsconfig.base.json",
    "typedoc.cjs"
  ],
  "scripts": {
    "build": "npx ts-node --esm build.config.ts",
    "build:docs": "npx typedoc",
    "check:cost": "npx cost-of-modules --no-install --include-dev",
    "check:coverage": "npx vitest run --coverage=true",
    "check:full": "npm run lint && npm run check:types && npm run check:coverage && npm run check:project",
    "check:project": "npx node-standards lint",
    "check:types": "npx tsc -p tsconfig.json",
    "format": "npx prettier \"**/*.{ts,js,json,yml,yaml,md}\" --write",
    "lint": "npx eslint \"./{src,test,typings}/**/*.ts\" --cache --no-eslintrc --config .eslintrc.cjs",
    "lint:fix": "npm run lint -- --fix",
    "lint:full": "bash -c \"FULL_LINT=true npm run lint\"",
    "package": "rm -rf .dist && npm run build",
    "postyalcpublish": "cd examples/library && npx yalc add @skyleague/node-standards && cd ../yargs-cli && npx yalc add @skyleague/node-standards",
    "prepare": "npx husky install || true",
    "preyalcpublish": "npm run build",
    "test": "npx vitest run"
  },
  "dependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^0.34.4",
    "conventional-changelog": "^5.1.0",
    "enquirer": "^2.4.1",
    "esbuild": "^0.19.3",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "fast-glob": "^3.3.1",
    "find-root": "^1.1.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "line-diff": "^2.1.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "semantic-release": "^21.1.1",
    "semver": "^7.5.4",
    "tslib": "^2.6.2",
    "variable-diff": "^2.0.2",
    "vitest": "^0.34.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@skyleague/therefore": "^2.2.7",
    "@types/concurrently": "^7.0.0",
    "@types/find-root": "^1.1.2",
    "@types/is-ci": "^3.0.0",
    "@types/semver": "^7.5.2",
    "@types/yargs": "^17.0.24",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org"
  },
  "node-standards": {
    "extends": "yargs-cli",
    "ignorePatterns": [
      ".eslintrc.cjs",
      "babel.config.cjs",
      "commitlint.config.cjs",
      "build.config.ts",
      "lint-staged.config.cjs",
      "prettier.config.cjs",
      "release.config.cjs",
      "tsconfig.json",
      "typedoc.cjs",
      ".github/workflows/package.yml"
    ],
    "rules": {
      "files": false,
      "exports": false
    }
  }
}
