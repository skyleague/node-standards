{
  "name": "@skyleague/node-standards",
  "version": "5.0.5",
  "description": "Build tools for SkyLeague packages.",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyleague/node-standards.git"
  },
  "license": "MIT",
  "author": "SkyLeague Technologies B.V. <technologies@skyleague.io> (https://skyleague.io)",
  "type": "module",
  "exports": {
    ".": "./.dist/index.js",
    "./package.json": "./package.json",
    "./*.cjs": "./*.cjs",
    "./.*.cjs": "./.*.cjs",
    "./tsconfig.base.json": "./tsconfig.base.json"
  },
  "types": "./.dist/index.d.ts",
  "bin": {
    "node-standards": "./bin/run.js"
  },
  "files": [
    ".eslintrc.base.cjs",
    "babel.config.cjs",
    "bin",
    ".dist",
    "commitlint.config.cjs",
    "esbuild.plugins.cjs",
    "lint-staged.config.cjs",
    "package.json",
    "prettier.config.cjs",
    "release.config.cjs",
    "templates",
    "examples",
    "tsconfig.base.json",
    "typedoc.cjs"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.dist.json",
    "build:docs": "npx typedoc",
    "check:coverage": "vitest run --coverage=true",
    "check:project": "node-standards lint",
    "check:types": "tsc -p tsconfig.json",
    "format": "prettier \"**/*.{ts,js,json,yml,yaml,md}\" --write",
    "lint": "eslint \"./{src,test,typings}/**/*.ts\" --cache --no-eslintrc --config .eslintrc.cjs",
    "lint:fix": "npm run lint -- --fix",
    "package": "rm -rf .dist && npm run build",
    "prepare": "husky || true",
    "test": "vitest run"
  },
  "dependencies": {
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@types/node": "^20.11.26",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-v8": "^1.3.1",
    "conventional-changelog": "^5.1.0",
    "enquirer": "^2.4.1",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^51.0.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "fast-glob": "^3.3.2",
    "find-root": "^1.1.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "line-diff": "^2.1.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.12",
    "semantic-release": "^23.0.2",
    "semver": "^7.6.0",
    "tsx": "^4.7.1",
    "variable-diff": "^2.0.2",
    "vitest": "^1.3.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@skyleague/therefore": "^4.1.1",
    "@types/find-root": "^1.1.4",
    "@types/is-ci": "^3.0.4",
    "@types/semver": "^7.5.8",
    "@types/yargs": "^17.0.32",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org"
  },
  "workspaces": [
    "./",
    "examples/*"
  ],
  "node-standards": {
    "extends": "yargs-cli",
    "ignorePatterns": [
      ".eslintrc.cjs",
      "babel.config.cjs",
      "commitlint.config.cjs",
      "lint-staged.config.cjs",
      "prettier.config.cjs",
      "release.config.cjs",
      "tsconfig.json",
      "typedoc.cjs",
      ".github/workflows/package.yml"
    ],
    "rules": {
      "files": false,
      "exports": false
    }
  }
}
