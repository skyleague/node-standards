{
  "name": "@skyleague/node-standards",
  "version": "1.0.0",
  "description": "Build tools for SkyLeague packages.",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyleague/node-standards.git"
  },
  "license": "MIT",
  "author": "SkyLeague Technologies B.V. <technologies@skyleague.io> (https://skyleague.io)",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json",
    "./*.cjs": "./*.cjs",
    "./.*.cjs": "./.*.cjs",
    "./tsconfig.base.json": "./tsconfig.base.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "node-standards": "./bin/run.js"
  },
  "files": [
    ".eslintrc.base.cjs",
    "babel.config.cjs",
    "bin",
    "dist",
    "commitlint.config.cjs",
    "esbuild.plugins.cjs",
    "jest.config.cjs",
    "lint-staged.config.cjs",
    "package.json",
    "prettier.config.cjs",
    "release.config.cjs",
    "templates",
    "examples",
    "tsconfig.base.json",
    "typedoc.cjs"
  ],
  "scripts": {
    "build": "npx ts-node --esm build.config.ts",
    "build:clean": "npx tsc --build --clean && rm -rf dist",
    "build:docs": "npx typedoc",
    "check:cost": "npx cost-of-modules --no-install --include-dev",
    "check:coverage": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest --collectCoverage=true",
    "check:full": "npm run lint && npm run check:types && npm run check:coverage && npm run build && npm run check:project",
    "check:project": "npx node-standards lint",
    "check:types": "npx tsc -p tsconfig.json",
    "format": "npx prettier \"**/*.{ts,js,json,yml,yaml,md}\" --write",
    "lint": "npx eslint \"./{src,test,typings}/**/*.ts\" --cache --no-eslintrc --config .eslintrc.cjs",
    "lint:fix": "npm run lint -- --fix",
    "lint:full": "bash -c \"FULL_LINT=true npm run lint\"",
    "package": "rm -rf .dist && npm run build",
    "postyalcpublish": "cd examples/library && npx yalc add @skyleague/node-standards && cd ../yargs-cli && npx yalc add @skyleague/node-standards",
    "prepare": "npx husky install || true",
    "preyalcpublish": "npm run build",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest"
  },
  "dependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.9",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "conventional-changelog": "^3.1.25",
    "esbuild": "^0.17.13",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^46.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fast-glob": "^3.2.12",
    "find-root": "^1.1.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "line-diff": "^2.1.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "prettier-plugin-packagejson": "^2.4.3",
    "semantic-release": "^21.0.0",
    "semver": "^7.3.8",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "variable-diff": "^2.0.2",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@skyleague/therefore": "^1.24.2",
    "@types/concurrently": "^7.0.0",
    "@types/find-root": "^1.1.2",
    "@types/is-ci": "^3.0.0",
    "@types/source-map-support": "^0.5.6",
    "@types/yargs": "^17.0.24",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "node-standards": {
    "extends": "yargs-cli",
    "ignorePatterns": [
      ".eslintrc.cjs",
      "babel.config.cjs",
      "commitlint.config.cjs",
      "build.config.ts",
      "lint-staged.config.cjs",
      "prettier.config.cjs",
      "release.config.cjs",
      "tsconfig.json",
      "typedoc.cjs",
      ".github/workflows/package.yml"
    ],
    "rules": {
      "files": false,
      "exports": false
    }
  }
}
